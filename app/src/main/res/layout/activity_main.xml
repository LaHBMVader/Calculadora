<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="200dp"
            tools:layout_editor_absoluteX="295dp">
        <TextView
                android:layout_width="410dp"
                android:layout_height="232dp" android:id="@+id/pantalla" android:background="#77C88AE9"
        />
        <GridLayout
                android:layout_width="411dp"
                android:layout_height="400" android:id="@+id/teclas">
            <ImageButton
                    android:layout_width="102.75"
                    android:layout_height="100" app:srcCompat="@drawable/dos" android:layout_row="3"
                    android:id="@+id/btnDos" android:layout_column="1" android:scaleType="fitCenter"
                    android:background="#FFFFFF"/>
            <ImageButton
                    android:layout_width="102.75"
                    android:layout_height="100" app:srcCompat="@drawable/tres" android:layout_row="3"
                    android:id="@+id/btnTres" android:layout_column="2" android:scaleType="fitCenter"
                    android:background="#FFFFFF"/>
            <ImageButton
                    android:layout_width="102.75dp"
                    android:layout_height="100dp" app:srcCompat="@drawable/uno" android:layout_row="3"
                    android:id="@+id/btnUno" android:layout_column="0" android:scaleType="fitCenter"
                    android:background="#FFFFFF"/>
            <ImageButton
                    android:layout_width="102.75"
                    android:layout_height="100" app:srcCompat="@drawable/cuatro" android:layout_row="2"
                    android:id="@+id/btnCuatro" android:layout_column="0" android:scaleType="fitCenter"
                    android:background="#FFFFFF"/>
            <ImageButton
                    android:layout_width="102.75"
                    android:layout_height="100" app:srcCompat="@drawable/cinco" android:layout_row="2"
                    android:id="@+id/btnCinco" android:layout_column="1" android:scaleType="fitCenter"
                    android:background="#FFFFFF"/>
            <ImageButton
                    android:layout_width="102.75"
                    android:layout_height="100" app:srcCompat="@drawable/seis" android:layout_row="2"
                    android:id="@+id/btnSeis" android:layout_column="2" android:scaleType="fitCenter"
                    android:background="#FFFFFF"/>
            <ImageButton
                    android:layout_width="102.75"
                    android:layout_height="100" app:srcCompat="@drawable/siete" android:layout_row="1"
                    android:id="@+id/btnSiete" android:layout_column="0" android:scaleType="fitCenter"
                    android:background="#FFFFFF"/>
            <ImageButton
                    android:layout_width="102.75"
                    android:layout_height="100" app:srcCompat="@drawable/ocho" android:layout_row="1"
                    android:id="@+id/btnOcho" android:layout_column="1" android:scaleType="fitCenter"
                    android:background="#FFFFFF"/>
            <ImageButton
                    android:layout_width="102.75"
                    android:layout_height="100" app:srcCompat="@drawable/nueve" android:layout_row="1"
                    android:id="@+id/btnNueve" android:layout_column="2" android:scaleType="fitCenter"
                    android:background="#FFFFFF"/>
            <ImageButton
                    android:layout_width="105.75"
                    android:layout_height="100" app:srcCompat="@drawable/mult" android:layout_row="0"
                    android:id="@+id/btnMult" android:layout_column="3" android:scaleType="fitCenter"
                    android:background="#FFFFFF"/>
            <ImageButton
                    android:layout_width="102.75"
                    android:layout_height="100" app:srcCompat="@drawable/menos" android:layout_row="2"
                    android:id="@+id/btnMenos" android:layout_column="3" android:scaleType="fitCenter"
                    android:background="#FFFFFF"/>
            <ImageButton
                    android:layout_width="102.75"
                    android:layout_height="100" app:srcCompat="@drawable/division" android:layout_row="1"
                    android:id="@+id/btnEntre" android:layout_column="3" android:scaleType="fitCenter"
                    android:background="#FFFFFF"/>
            <ImageButton
                    android:layout_width="102.75"
                    android:layout_height="100" app:srcCompat="@drawable/mas" android:layout_row="3"
                    android:id="@+id/btnMas" android:layout_column="3" android:scaleType="fitCenter"
                    android:background="#FFFFFF"/>
            <ImageButton
                    android:layout_width="102.75"
                    android:layout_height="100" app:srcCompat="@drawable/raiz" android:layout_row="0"
                    android:id="@+id/btnRaiz" android:layout_column="2" android:background="#FFFFFF"
                    android:scaleType="fitCenter"/>
            <Button
                    android:text="AC"
                    android:layout_width="102.75"
                    android:layout_height="100" android:layout_row="0" android:id="@+id/btnAC"
                    android:layout_column="1"
                    android:background="@drawable/botonbonito" android:textSize="65dp" android:textColor="#FFFFFF"
                    android:typeface="monospace"/>
            <Button
                    android:text="C"
                    android:layout_width="102.75"
                    android:layout_height="100" android:layout_row="0" android:id="@+id/btnC"
                    android:layout_column="0"
                    android:background="@drawable/botonbonito" android:textSize="65dp" android:textColor="#FFFFFF"
                    android:typeface="monospace"/>
        </GridLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageButton
                    android:layout_width="205.5dp"
                    android:layout_height="100dp" app:srcCompat="@drawable/cero" android:id="@+id/btnCero"
                    android:scaleType="fitCenter"
                    android:background="#FFFFFF"/>
            <ImageButton
                    android:layout_width="102.75"
                    android:layout_height="100" app:srcCompat="@drawable/rec"
                    android:id="@+id/btnPunto" android:scaleType="fitCenter"
                    android:background="#FFFFFF"/>
            <ImageButton
                    android:layout_width="102.75"
                    android:layout_height="100" app:srcCompat="@drawable/igual"
                    android:id="@+id/btnIgual" android:scaleType="fitCenter" android:background="#FFFFFF"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>